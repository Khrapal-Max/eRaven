@using Blazored.FluentValidation
@using eRaven.Application.ViewModels.PlanActionViewModels

<div class="modal fade @(IsOpen ? "show d-block" : "")" tabindex="-1">
    <div class="modal-dialog modal-sm modal-dialog-centered" style="--bs-modal-width: 800px; max-width: 800px;">
        <div class="modal-content text-white">

            <div class="modal-header py-2">
                <h6 class="modal-title mb-0">Затвердити наказом</h6>
                <button type="button" class="btn-close" @onclick="Close" aria-label="Закрити"></button>
            </div>

            <div class="modal-body p-3">
                <EditForm Model="ViewModel" OnValidSubmit="ApproveAction">
                    <FluentValidationValidator @ref="_validator" />

                    <div class="mt-2">
                        <label class="form-label small mb-1" for="order-input">Номер бойового розпорядження</label>
                        <InputText id="order-input"
                                   class="form-control form-control-sm"
                                   @bind-Value="ViewModel.Order" />
                        <ValidationMessage For="() => ViewModel.Order" />
                    </div>

                    <!-- довідкова секція (необовʼязкова): показати, що саме апрувимо -->
                    <div class="mt-2 small text-muted">
                        <div>Дата/час (UTC): @ViewModel.EffectiveAtUtc.ToString("dd.MM.yyyy HH:mm")</div>
                        <div>Тип дії: @ViewModel.MoveType</div>
                    </div>

                    <div class="text-end mt-3">
                        <button class="btn btn-secondary btn-sm me-2" type="button" @onclick="Close" disabled="@_busy">Скасувати</button>
                        <button class="btn btn-primary btn-sm" type="submit" disabled="@_busy">Затвердити</button>
                    </div>
                </EditForm>
            </div>

        </div>
    </div>
</div>
