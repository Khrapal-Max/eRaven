@* Редагування порядку (Order) для StatusKind
@if (IsOpen)
{
    <div class="modal fade show text-white" style="display:block;" tabindex="-1" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h6 class="modal-title">Редагувати порядок</h6>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <EditForm Model="@Model" OnValidSubmit="SaveAsync">
                    <DataAnnotationsValidator />

                    <div class="modal-body">
                        <div class="mb-2">
                            <label class="form-label form-label-sm">Статус</label>
                            <input class="form-control form-control-sm" value="@Model.Name" readonly />
                        </div>

                        <div class="mb-2">
                            <label class="form-label form-label-sm">Поточний порядок</label>
                            <input class="form-control form-control-sm" value="@Model.CurrentOrder" readonly />
                        </div>

                        <div class="mb-2">
                            <label class="form-label form-label-sm">Новий порядок</label>
                            <InputNumber class="form-control form-control-sm"
                                         @bind-Value="Model.NewOrder" />
                            <ValidationMessage For="() => Model.NewOrder" />
                        </div>
                    </div>

                    <div class="modal-footer py-2">
                        <button type="button" class="btn btn-sm btn-warning" @onclick="Close" disabled="@Busy">Скасувати</button>
                        <button type="submit" class="btn btn-sm btn-primary" disabled="@Busy">
                            @if (Busy)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Зберегти
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}
 *@