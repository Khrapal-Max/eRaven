<!-- StatusCreateModal.razor -->
@if (IsOpen)
{
    <div class="modal fade show text-white" style="display:block;" tabindex="-1" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h6 class="modal-title">Новий статус</h6>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <EditForm Model="@Model" OnValidSubmit="CreateAsync">
                    <!-- FluentValidation -->
                    <FluentValidationValidator />

                    <div class="modal-body">
                        <div class="mb-2">
                            <label class="form-label form-label-sm">Назва</label>
                            <InputText class="form-control form-control-sm" @bind-Value="Model.Name" />
                            <ValidationMessage For="() => Model.Name" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label form-label-sm">Код</label>
                            <InputText class="form-control form-control-sm" @bind-Value="Model.Code" />
                            <ValidationMessage For="() => Model.Code" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label form-label-sm">Порядок</label>
                            <InputNumber class="form-control form-control-sm" @bind-Value="Model.Order" />
                            <ValidationMessage For="() => Model.Order" />
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">Активний</label>
                            <InputCheckbox class="form-check-input" @bind-Value="Model.IsActive" />
                        </div>
                    </div>

                    <div class="modal-footer py-2">
                        <button type="button" class="btn btn-sm btn-warning" @onclick="Close" disabled="@Busy">Скасувати</button>
                        <button type="submit" class="btn btn-sm btn-primary" disabled="@Busy">
                            @if (Busy)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Створити
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}
